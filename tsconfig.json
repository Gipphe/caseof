{
	"compilerOptions": {
		"outDir": "dist",
		"target": "ES2019",
		"module": "CommonJS",
		"declaration": true,
		"strict": true,
		"moduleResolution": "node",
		"alwaysStrict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"newLine": "lf",
		"baseUrl": "."
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
